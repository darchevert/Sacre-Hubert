<!DOCTYPE html>
<html>

<head>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="stylesheets/materialize.min.css" media="screen,projection" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <div class="wrapper">
    <div class="header">
      <div class="navbar-fixed">
        <nav class="orange">
          <div class="nav-wrapper">
            <form>
              <div class="input-field">
                <input id="search" type="search" required>
                <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                <i class="material-icons">close</i>
              </div>
            </form>
          </div>
        </nav>
      </div>
    </div>
  </div>
  <div>


    <div class="content">
      <div class="row" class="inlineBlock" id="collection-id">
        <ul class="collection">
          <%
    for(var i=0; i<punchlines.length; i++) {
    %>
            <li class="collection-item avatar grey lighten-5 player" class="collection-item">
              <img src="<%=punchlines[i].photo %>" alt=" " class="circle large">

              <!-- <button class="btn-floating waves-effect waves-light right"><i class="material-icons orange">star_border</i></button> -->
              <span class="title"><%=punchlines[i].name %></span>
              <p>
                <%=punchlines[i].punchline %>
              </p>
              <form action="/add-fav" method="POST">
                <input type="hidden" name="photo" value="<%=punchlines[i].photo %>">
                <input type="hidden" name="name" value="<%=punchlines[i].name %>">
                <input type="hidden" name="punchline" value="<%=punchlines[i].punchline %>">
                <audio type="audio" name="sound" src="<%=punchlines[i].sound %>"></audio>
                <button type="submit" class="btn-floating waves-effect waves-light right"><i class="material-icons orange">star_border</i></button>
              </form>
            </li>


            <%
   }
   %>
        </ul>
      </div>

    </div>

    <div class="navbar-fixed-bottom">
      <nav class="navbar orange">
        <div class="nav-content">
          <ul class="tabs tabs-transparent">
            <li class="tab"><a class="active" href="/">Les répliques</a></li>
            <li class="tab"><a href="/fav">Mes préférées</a></li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
  <script type="text/javascript" src="javascripts/script.js"></script>
  <!--JavaScript at end of body for optimized loading-->
  <script type="text/javascript " src="javascripts/materialize.min.js "></script>
</body>

</html>
