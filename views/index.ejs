                <i class="material-icons">close</i>
              </div>
            </form>
          </div>
        </nav>
      </div>
    </div>
  </div>
  <div>
    <div class="content">
      <div class="row" id="collection-id">
        <ul class="collection" id="myUL">
          <%
    for(var i=0; i<punchlines.length; i++) {
    %>
            <li class="collection-item avatar grey lighten-5 player" class="collection-item">
              <img src="<%=punchlines[i].photo %>" alt=" " class="circle large">
              <div class="col s10">
                <p class="title"><%=punchlines[i].punchline %></p>
                <span><%=punchlines[i].name %></span>
              </div>

              <div class="col s1 offset-s1 right">
                <a href="/add-fav?name=<%=punchlines[i].name%>&punchline=<%=punchlines[i].punchline%>&photo=<%=punchlines[i].photo%>&sound=<%=punchlines[i].sound%>" class="right">
                 <i id="toto" onclick="etoile()" class="small material-icons right">add_box</i></a>
                <audio type="hidden" name="sound" src="<%=punchlines[i].sound %>"></audio>
